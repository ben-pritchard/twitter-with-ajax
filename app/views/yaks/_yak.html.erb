<div class="box" id="yak_<%= yak.id %>">
  <p>User email: <%= User.find(yak.user_id).email %></p>
  <p><%= yak.body %></p>
  <p>
    <%= link_to "belete", yak_path(yak), remote: true, :data => { :method => "delete"} %> |
    <%= link_to "Yak back!", new_yak_yak_back_path(yak), id: "new_comment", remote: true %>
    </p>
  <div id="comments">
    <% if yak.yak_backs.any? %>
      <%= render yak.yak_backs %>
    <% end %>
  </div>
</div>
